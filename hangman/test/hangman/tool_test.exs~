defmodule ToolTest do
  use ExUnit.Case
  doctest Hangman.Tool

  test " a list of ["_","_"] returned if get_letters invoked given n = 2 " do
    assert Hangman.Tool.get_letters(2) == ["_","_"]
  end

  test " a combined list with all "_" removed returned if two lists are given " do
    assert  Hangman.Tool.combine(["a", "_", "c"],["_", "b", "_"], 3) == ["a", "b", "c"]
  end
end
